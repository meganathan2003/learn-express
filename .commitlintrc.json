{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "scope-case": [
            2,
            "always",
            "lower-case"
        ],
        "subject-case": [
            2,
            "always",
            "sentence-case"
        ],
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "test",
                "chore"
            ]
        ]
    }
}